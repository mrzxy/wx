/* pages/index/detail.wxss */

.pic-swiper-box {
    min-height: 200rpx;
}

.pic-swiper-item {
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pic-swiper-item .loading {
    height: 45px;
    width: 50px;
}

.pic-swiper-item image {
    height: 100%;
}

.title {
    padding: 40rpx 20rpx 40rpx 20rpx;
    font-size: 11pt;
}

.body {
    height: 200rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.body-left {
    width: 400rpx;
}

.price {
    margin-top: 30rpx;
    margin-left: 15rpx;
    color: brown;
}
.price-desc {
    font-size: 8pt;
    margin-top: 9px;
    margin-left: 15rpx;
}

.body-right {
    width: 350rpx;
}

.body-btns {
    display: flex;
    justify-content: flex-end;
    padding: 20rpx 20rpx 0rpx 0rpx;
}
.share-btn {
    height: 25px;
    width: 25px;
    background-color: transparent;
    margin: 0px;
    padding: 0px;
    line-height: initial;
    border: 0px;
  
    display:inline-block;

}
